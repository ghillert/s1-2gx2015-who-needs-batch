<mapping>
    <class name="io.spring.recommendation.domain.User">

        <map-to xml="row" />

        <field name="id" type="long">
            <bind-xml name="Id" node="attribute" />
        </field>

        <field name="reputation" type="int">
            <bind-xml name="Reputation" node="attribute" />
        </field>

        <field name="creationDate" type="java.util.Date">
            <bind-xml name="CreationDate" node="attribute" />
        </field>

        <field name="displayName" type="string">
            <bind-xml name="DisplayName" node="attribute" />
        </field>

        <field name="lastAccessDate" type="java.util.Date">
            <bind-xml name="LastAccessDate" node="attribute" />
        </field>

        <field name="location" type="string">
            <bind-xml name="Location" node="attribute" />
        </field>

        <field name="about" type="string">
            <bind-xml name="AboutMe" node="attribute" />
        </field>

        <field name="views" type="int">
            <bind-xml name="Views" node="attribute" />
        </field>

        <field name="upVotes" type="int">
            <bind-xml name="UpVotes" node="attribute" />
        </field>

        <field name="downVotes" type="int">
            <bind-xml name="DownVotes" node="attribute" />
        </field>
    </class>
</mapping>